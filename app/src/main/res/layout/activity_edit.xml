<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".CaptureActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:id="@+id/appBarLayout2">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </com.google.android.material.appbar.AppBarLayout>

    <View
            android:id="@+id/colorFrameView"
            tools:background="@android:color/holo_green_dark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout2"/>

    <ImageView
            android:id="@+id/barcodeImage"
            android:src="@drawable/test_qr_code"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@+id/colorFrameView"
            app:layout_constraintEnd_toEndOf="@+id/colorFrameView"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/colorFrameView"
            app:layout_constraintBottom_toBottomOf="@+id/colorFrameView"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@android:drawable/ic_menu_save"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small_title"
            android:id="@+id/titleNotesTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/colorFrameView"/>

    <EditText
            android:hint="Set title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/notesEditText"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/text_size_ordinary"
            tools:text="ddddddddddddddddddddddddddddddddddddddddddddddddddddddddd"
            app:layout_constraintTop_toBottomOf="@+id/titleNotesTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:singleLine="true"/>

    <TextView
            android:text="Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small_title"
            android:id="@+id/titleDataTextView"
            app:layout_constraintStart_toStartOf="@+id/titleNotesTextView"
            app:layout_constraintTop_toBottomOf="@+id/notesEditText"
            android:layout_marginTop="16dp"/>

    <TextView
            android:text="Data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dataTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:textSize="@dimen/text_size_ordinary"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/titleDataTextView"/>

    <TextView
            android:text="Format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small_title"
            android:id="@+id/titleFormatTextView"
            app:layout_constraintStart_toStartOf="@+id/titleNotesTextView"
            app:layout_constraintTop_toBottomOf="@+id/dataTextView"
            android:layout_marginTop="16dp"/>

    <TextView
            android:text="QR_CODE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/formatTextView"
            android:textSize="@dimen/text_size_ordinary"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/titleFormatTextView"
            app:layout_constraintStart_toStartOf="@+id/notesEditText"
    />
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline2"
            app:layout_constraintGuide_percent="0.15"
            android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            app:layout_constraintGuide_percent="0.85"
            android:orientation="vertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>