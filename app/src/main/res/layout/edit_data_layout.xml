<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/transparent_gray"
        tools:context=".EditActivity">

    <TextView
            android:text="@string/details"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="bottom"
            android:paddingStart="@dimen/data_row_padding"
            android:paddingEnd="@dimen/data_row_padding"
            android:layout_weight="2"
            android:textSize="@dimen/text_size_small_title"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:minHeight="@dimen/data_row_height"
            android:paddingStart="@dimen/data_row_padding"
            android:paddingEnd="@dimen/data_row_padding"
            android:background="@android:color/white"
            android:layout_marginBottom="@dimen/line_separator_height"
            android:layout_height="wrap_content">

        <TextView
                android:text="@string/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small_title"
                android:id="@+id/titleNotesTextView"/>
        <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        <EditText
                android:hint="@string/set_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleEditText"
                android:textSize="@dimen/text_size_ordinary"
                tools:text="dddddddddddddd"
                android:singleLine="true"
                android:inputType="text"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:paddingStart="@dimen/data_row_padding"
            android:paddingEnd="@dimen/data_row_padding"
            android:background="@android:color/white"
            android:layout_marginBottom="@dimen/line_separator_height"
            android:layout_height="wrap_content">

        <TextView
                android:text="@string/data_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small_title"
                android:id="@+id/titleDataTextView"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:id="@+id/dataTextView"
                android:textColorLink="@color/link_color"
                android:autoLink="web"
                android:textSize="@dimen/text_size_ordinary"
                tools:text="Data"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:minHeight="@dimen/data_row_height"
            android:paddingStart="@dimen/data_row_padding"
            android:paddingEnd="@dimen/data_row_padding"
            android:background="@android:color/white"
            android:layout_marginBottom="@dimen/line_separator_height"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="@string/barcode_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small_title"
                android:id="@+id/titleFormatTextView"/>

        <TextView
                tools:text="QR_CODE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:id="@+id/formatTextView"
                android:textSize="@dimen/text_size_ordinary" />
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
</LinearLayout>